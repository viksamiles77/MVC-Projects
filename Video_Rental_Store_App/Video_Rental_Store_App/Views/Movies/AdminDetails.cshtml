@model MovieViewModel

<div class="container mt-4">
    <h1 class="text-center main-text mb-4">Movie Details</h1>

    <div class="border border-primary rounded p-4">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Title:</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3 font-weight-bold">Genre:</dt>
            <dd class="col-sm-9">@Model.Genre</dd>

            <dt class="col-sm-3 font-weight-bold">Language:</dt>
            <dd class="col-sm-9">@Model.Language</dd>

            <dt class="col-sm-3 font-weight-bold">Is Available:</dt>
            <dd class="col-sm-9">@Model.IsAvailable</dd>

            <dt class="col-sm-3 font-weight-bold">Release Date:</dt>
            <dd class="col-sm-9">@Model.ReleaseDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 font-weight-bold">Length:</dt>
            <dd class="col-sm-9">@Model.Length minutes</dd>

            <dt class="col-sm-3 font-weight-bold">Age Restriction:</dt>
            <dd class="col-sm-9">@Model.AgeRestriction</dd>

            <dt class="col-sm-3 font-weight-bold">Quantity:</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>
        </dl>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mr-2">Edit</a>
        <a asp-action="AdminIndex" class="btn btn-secondary">Back to List</a>
    </div>
</div>
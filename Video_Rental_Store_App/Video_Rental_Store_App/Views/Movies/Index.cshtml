@model List<MovieViewModel>

@if (Model.Count == 0)
{
    <div class="container mt-4">
        <p>@ViewBag.Message</p>
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary btn-custom">Add New Movie</a>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary btn-custom">Add New Movie</a>
            <a asp-action="UserMovies" asp-controller="User" class="btn btn-primary btn-custom">Rented movies</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <th scope="row">@movie.Id</th>
                        <td>@movie.Title</td>
                        <td>@movie.Genre</td>
                        <td>@movie.Quantity</td>
                        <td>
                            <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.Id" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-controller="Movies" asp-route-id="@movie.Id" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
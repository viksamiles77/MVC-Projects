@model List<MovieViewModel>
@if (Model.Count == 0)
{
    <p>@ViewBag.Message</p>
    <div>
        <a asp-action="Create" class="btn btn-primary">Add New Movie</a>
    </div>
}
else
{
    <div>
        <a asp-action="Create" class="btn btn-primary">Add New Movie</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Genre</th>
                <th scope="col">Quantity</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <th scope="row">@movie.Id</th>
                    <td>@movie.Title</td>
                    <td>@movie.Genre</td>
                    <td>@movie.Quantity</td>
                    <td>
                        <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-controller="Movies" asp-route-id="@movie.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Movies" asp-route-id="@movie.Id" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}